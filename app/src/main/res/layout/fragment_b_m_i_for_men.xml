<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.BMIForMenFragment"
    android:orientation="vertical"
    android:padding="16sp">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center_horizontal|center_vertical"

        android:backgroundTint="#FAFAF2"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:hint="Weight"
            android:layout_gravity="center_vertical"
            android:textColorHint="#221E1F"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/menWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#221E1F"
                android:autofillHints="Weight"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:text="Weight in KG"
                android:textSize="10sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:backgroundTint="#FAFAF2"
        android:layout_marginTop="15dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:hint="Height"
            android:layout_gravity="center_vertical"
            android:textColorHint="#221E1F"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/menHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#221E1F"
                android:autofillHints="Height"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:text="Height in Meter"
                android:textSize="10sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        android:padding="8dp"
        android:visibility="invisible"
        >
        <LinearLayout
            android:id="@+id/menBMIResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                >
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="BMI Score: "
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/bmiScore"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="BMI Score: "
                    android:paddingLeft="10dp"
                    android:textColor="#fff"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                >
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Remark: "
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:id="@+id/bmiRemark"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="BMI Score: "
                    android:paddingLeft="10dp"
                    android:textColor="#fff"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>