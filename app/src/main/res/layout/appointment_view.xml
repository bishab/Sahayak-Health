<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/minDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/expandIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_expand"
            />
        <TextView
            android:id="@+id/viewAppHospitalName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ambulance"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/viewAppDepartment"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/viewAppTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/moreDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E4E6EB"
        app:cardCornerRadius="12dp"
        android:layout_marginLeft="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/appViewFullName"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:id="@+id/appViewGender"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:id="@+id/appViewAge"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Age Yrs."
                    android:textColor="@color/black"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            >
            <TextView
                android:id="@+id/appViewEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="abcd@gmail.com"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/appViewContact"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textColor="@color/black"
                android:layout_marginLeft="80dp"
                />
        </LinearLayout>
            <TextView
                android:id="@+id/appViewAdderss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vyas-2, Damauli"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>